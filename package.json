{
  "name": "a-project-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.50.0",
    "@payloadcms/db-vercel-postgres": "3.50.0",
    "@payloadcms/live-preview-react": "3.50.0",
    "@payloadcms/next": "3.50.0",
    "@payloadcms/payload-cloud": "3.50.0",
    "@payloadcms/plugin-seo": "3.50.0",
    "@payloadcms/richtext-lexical": "3.50.0",
    "@payloadcms/storage-vercel-blob": "3.50.0",
    "@payloadcms/ui": "3.50.0",
    "@reduxjs/toolkit": "^2.8.2",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "motion": "^12.6.5",
    "next": "^15.4.7",
    "next-intl": "^4.0.2",
    "payload": "3.50.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "sharp": "0.34.2",
    "swiper": "^11.2.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.4.7",
    "jsdom": "26.1.0",
    "postcss": "^8",
    "prettier": "3.5.3",
    "tailwindcss": "^4.0.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
